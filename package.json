{
  "name": "twitch_popout",
  "productName": "Twitch Popout Player",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^2.0.7"
  },
  "dependencies": {
    "asar": "^0.14.3",
    "electron-context-menu": "^0.10.0",
    "electron-prompt": "^1.1.0-1"
  },
  "scripts": {
    "start": "electron . ",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/twitch.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . twitch-popout-player --overwrite --asar=true --platform=win32 --arch=ia32 --icon=\"assets/icon.ico\" --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Twitch Popout Player\"",    
    "package-linux": "electron-packager . twitch-popout-player --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/twitch.png --prune=true --out=release-builds"
  }
}
